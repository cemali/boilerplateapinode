{
  "name": "boilerplateapinode",
  "version": "1.0.0",
  "description": "Boiler plate Node projects with Express Typescript and clean architecture",
  "main": "index.js",
  "engines": {
    "node": ">=19.17.0",
    "yarn": ">=1.22.19",
    "npm": "please-use-yarn"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "dev": "ts-node-dev --respawn --clear --transpile-only --ignore-watch node_modules ./src/app.ts",
    "build": "rimraf ./dist && tsc",
    "start": "node dist/app.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github/cemali/boilerplateapinode.git"
  },
  "keywords": [
    "Node",
    "TypeScript",
    "Express",
    "API",
    "REST"
  ],
  "author": "Matt Lee",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.7",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.0-dev.20240621"
  },
  "dependencies": {
    "ts-node": "^10.9.2"
  }
}
